---
import Layout from '../../layouts/Layout.astro';

const phone = "(514) 555-1234";
const email = "info@mptools.ca";
const phoneHref = "tel:+15145551234";

const specialties = [
    {
        title: "Outils de Coupe & Abrasifs",
        description: "Plaquettes carbure, fraises, forets, meules—qualité production et maintenance"
    },
    {
        title: "Fixations Sur Mesure",
        description: "Métrique, impérial, grades spéciaux—conformes à vos spécifications"
    },
    {
        title: "Sécurité & ÉPI",
        description: "Gants, lunettes, protection auditive, respirateurs—certifiés CSA"
    },
    {
        title: "MRO & Consolidation",
        description: "Un seul appel pour tout—réduisez vos fournisseurs et la paperasse"
    },
    {
        title: "Pièces Rares & Discontinuées",
        description: "Pièces obsolètes, outils anciens—on les retrouve"
    },
    {
        title: "Outils Manuels & Électriques",
        description: "Milwaukee, DeWalt, Stanley—outils pro au prix distributeur"
    }
];

const brands = [
    "Kennametal", "Sandvik", "Iscar", "Walter", "Seco", "OSG",
    "3M", "Honeywell", "MSA", "Norton", "Stanley", "DeWalt",
    "Milwaukee", "Makita", "Widia", "Dormer", "Mitutoyo"
];

const industries = ["Ateliers d'Usinage", "Fabrication", "Équipes Maintenance", "Manufacturier", "Construction", "Aérospatiale"];
---

<Layout 
    title="MP Cutting Tools | Outillage Industriel - Montréal"
    description="Outillage industriel, équipement de sécurité et fournitures MRO. 34 ans d'approvisionnement auprès de 50+ fournisseurs. Soumissions en 24h. Grand Montréal."
    lang="fr"
    alternateUrl="/"
    alternateLang="en"
>
    <!-- Navigation -->
    <nav>
        <div class="nav-top-bar">
            <div class="nav-top-inner">
                <div class="nav-top-text">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                        <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
                    </svg>
                    Direct au propriétaire — réponses rapides, sans intermédiaire
                </div>
                <div class="nav-top-contact">
                    <a href={phoneHref}>
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
                        </svg>
                        {phone}
                    </a>
                    <a href={`mailto:${email}`}>
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                            <polyline points="22,6 12,13 2,6"/>
                        </svg>
                        {email}
                    </a>
                </div>
            </div>
        </div>
        <div class="nav-main">
            <div class="nav-inner">
                <a href="/fr" class="logo">
                    <div class="logo-mark">MP</div>
                    <span class="logo-text">Cutting Tools</span>
                </a>
                <div class="nav-links">
                    <a href="#products">Produits</a>
                    <a href="#brands">Fournisseurs</a>
                    <a href="#quote" class="nav-cta">Soumission</a>
                    <div class="lang-toggle">
                        <a href="/">EN</a>
                        <a href="/fr" class="active">FR</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero -->
    <section class="hero">
        <div class="container">
            <div class="hero-content">
                <div class="hero-badge">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                        <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
                    </svg>
                    Direct au Propriétaire
                </div>
                <h1>Meilleurs Prix.<br><span>Parce Qu'on Sait Où Chercher.</span></h1>
                <p>Outillage industriel, équipement de sécurité et fournitures MRO. 34 ans d'approvisionnement auprès de 50+ fournisseurs—la bonne pièce au bon prix, rapidement.</p>
                <div class="hero-cta">
                    <a href="#quote" class="btn btn-primary">
                        Demander Soumission
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                            <path d="M5 12h14M12 5l7 7-7 7"/>
                        </svg>
                    </a>
                    <a href={phoneHref} class="btn btn-outline">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
                        </svg>
                        Appelez-nous
                    </a>
                </div>
            </div>
            <div class="hero-image">
                <div class="hero-image-placeholder">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <circle cx="12" cy="12" r="3"/>
                        <path d="M19.4 15a1.65 1.65 0 00.33 1.82l.06.06a2 2 0 010 2.83 2 2 0 01-2.83 0l-.06-.06a1.65 1.65 0 00-1.82-.33 1.65 1.65 0 00-1 1.51V21a2 2 0 01-2 2 2 2 0 01-2-2v-.09A1.65 1.65 0 009 19.4a1.65 1.65 0 00-1.82.33l-.06.06a2 2 0 01-2.83 0 2 2 0 010-2.83l.06-.06a1.65 1.65 0 00.33-1.82 1.65 1.65 0 00-1.51-1H3a2 2 0 01-2-2 2 2 0 012-2h.09A1.65 1.65 0 004.6 9a1.65 1.65 0 00-.33-1.82l-.06-.06a2 2 0 010-2.83 2 2 0 012.83 0l.06.06a1.65 1.65 0 001.82.33H9a1.65 1.65 0 001-1.51V3a2 2 0 012-2 2 2 0 012 2v.09a1.65 1.65 0 001 1.51 1.65 1.65 0 001.82-.33l.06-.06a2 2 0 012.83 0 2 2 0 010 2.83l-.06.06a1.65 1.65 0 00-.33 1.82V9a1.65 1.65 0 001.51 1H21a2 2 0 012 2 2 2 0 01-2 2h-.09a1.65 1.65 0 00-1.51 1z"/>
                    </svg>
                </div>
                <div class="hero-image-badge">
                    <span>34</span>
                    Ans d'Expérience
                </div>
            </div>
        </div>
    </section>

    <!-- How It Works -->
    <section class="how-it-works">
        <div class="container">
            <div class="step">
                <div class="step-number">1</div>
                <div class="step-content">
                    <h3>Envoyez Votre Liste</h3>
                    <p>Numéros de pièces, photos, PDFs—ce que vous avez</p>
                </div>
            </div>
            <div class="step">
                <div class="step-number">2</div>
                <div class="step-content">
                    <h3>On Confirme les Détails</h3>
                    <p>Disponibilité, alternatives, délais—tout vérifié</p>
                </div>
            </div>
            <div class="step">
                <div class="step-number">3</div>
                <div class="step-content">
                    <h3>Soumission en 24h</h3>
                    <p>Livraison ou ramassage dans le Grand Montréal</p>
                </div>
            </div>
        </div>
    </section>

    <!-- What We're Best At -->
    <section class="specialties" id="products">
        <div class="container">
            <div class="section-header">
                <span class="section-label">Nos Spécialités</span>
                <h2 class="section-title">Approvisionnement Spécialisé</h2>
            </div>
            <div class="specialties-grid">
                {specialties.map((specialty) => (
                    <div class="specialty-card">
                        <div class="specialty-image-placeholder">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                                <circle cx="8.5" cy="8.5" r="1.5"/>
                                <polyline points="21 15 16 10 5 21"/>
                            </svg>
                        </div>
                        <div class="specialty-content">
                            <h3>{specialty.title}</h3>
                            <p>{specialty.description}</p>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Industries Strip -->
    <section class="industries">
        <div class="container">
            <div class="industries-inner">
                <span class="industries-label">Industries Desservies:</span>
                <div class="industries-list">
                    {industries.map((industry) => (
                        <span>{industry}</span>
                    ))}
                </div>
            </div>
        </div>
    </section>

    <!-- Image Showcase -->
    <section class="showcase">
        <div class="container">
            <div class="showcase-grid">
                <div class="showcase-images">
                    <div class="showcase-img-placeholder">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                            <circle cx="8.5" cy="8.5" r="1.5"/>
                            <polyline points="21 15 16 10 5 21"/>
                        </svg>
                    </div>
                    <div class="showcase-img-placeholder">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                            <circle cx="8.5" cy="8.5" r="1.5"/>
                            <polyline points="21 15 16 10 5 21"/>
                        </svg>
                    </div>
                    <div class="showcase-img-placeholder">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                            <circle cx="8.5" cy="8.5" r="1.5"/>
                            <polyline points="21 15 16 10 5 21"/>
                        </svg>
                    </div>
                </div>
                <div class="showcase-content">
                    <h2>La Précision Compte.<br>Le Prix Aussi.</h2>
                    <p>Depuis 1991, nous sommes le partenaire d'approvisionnement de confiance des ateliers montréalais. Un seul point de contact de la soumission à la livraison. Sans intermédiaire.</p>
                    <div class="showcase-stats">
                        <div class="stat">
                            <div class="stat-number">50+</div>
                            <div class="stat-label">Partenaires Fournisseurs</div>
                        </div>
                        <div class="stat">
                            <div class="stat-number">24h</div>
                            <div class="stat-label">Délai de Soumission</div>
                        </div>
                        <div class="stat">
                            <div class="stat-number">34</div>
                            <div class="stat-label">Années en Affaires</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Brands -->
    <section class="brands" id="brands">
        <div class="container">
            <div class="brands-header">
                <span class="section-label">Réseau de Fournisseurs</span>
                <h2 class="section-title">50+ Marques Disponibles</h2>
                <p>Accès autorisé aux manufacturiers leaders de l'industrie</p>
            </div>
            <div class="brands-grid">
                {brands.map((brand) => (
                    <div class="brand-card"><span>{brand}</span></div>
                ))}
                <div class="brand-card more"><span>+ Plusieurs Autres</span></div>
            </div>
            <p class="brands-note">Votre marque n'apparaît pas? On peut probablement la trouver. Demandez-nous.</p>
        </div>
    </section>

    <!-- Quote Section -->
    <section class="quote-section" id="quote">
        <div class="container">
            <div class="quote-grid">
                <div class="quote-content">
                    <div class="quote-badge">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                            <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
                        </svg>
                        Direct au Propriétaire
                    </div>
                    <h2>Obtenez Votre Soumission</h2>
                    <p>Envoyez-nous votre liste de pièces, BOM, ou même une photo d'étiquette. On confirme la disponibilité, suggère des alternatives si nécessaire, et vous fournit un prix en 24 heures.</p>
                    <div class="quote-contact">
                        <a href={phoneHref}>
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
                            </svg>
                            {phone}
                        </a>
                        <a href={`mailto:${email}`}>
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                                <polyline points="22,6 12,13 2,6"/>
                            </svg>
                            {email}
                        </a>
                    </div>
                </div>
                <div class="quote-form-wrapper">
                    <form class="quote-form" name="quote-fr" method="POST" data-netlify="true" enctype="multipart/form-data">
                        <input type="hidden" name="form-name" value="quote-fr" />
                        <h3>Soumission Liste de Pièces</h3>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="name">Votre Nom</label>
                                <input type="text" id="name" name="name" placeholder="Jean Tremblay" required>
                            </div>
                            <div class="form-group">
                                <label for="company">Entreprise</label>
                                <input type="text" id="company" name="company" placeholder="ABC Manufacturier">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="email">Courriel</label>
                                <input type="email" id="email" name="email" placeholder="jean@entreprise.com" required>
                            </div>
                            <div class="form-group">
                                <label for="phone">Téléphone</label>
                                <input type="tel" id="phone" name="phone" placeholder="(514) 555-0000">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group full">
                                <label for="parts">Liste de Pièces</label>
                                <textarea id="parts" name="parts" placeholder="Numéro de Pièce, Qté, Marque (une par ligne)&#10;Exemple:&#10;CNMG120408, 50, Sandvik&#10;Fraise 1/2 4FL, 10, Indifférent"></textarea>
                                <small>Collez numéros de pièces, quantités, marques—ou décrivez vos besoins</small>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="needby">Date Requise</label>
                                <input type="date" id="needby" name="needby">
                            </div>
                            <div class="form-group">
                                <label for="postal">Code Postal Livraison</label>
                                <input type="text" id="postal" name="postal" placeholder="H3B 1A7">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group full">
                                <label for="files">Fichiers (Optionnel)</label>
                                <input type="file" id="files" name="files" accept=".pdf,.png,.jpg,.jpeg,.xlsx,.csv" multiple>
                                <small>PDF, image, feuille BOM, ou photo d'étiquette</small>
                            </div>
                        </div>
                        <div class="form-checkbox">
                            <input type="checkbox" id="alternates" name="alternates">
                            <label for="alternates">Accepte des alternatives si l'original est indisponible</label>
                        </div>
                        <div class="form-submit">
                            <button type="submit" class="btn btn-primary">
                                Envoyer la Demande
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                                    <path d="M5 12h14M12 5l7 7-7 7"/>
                                </svg>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-logo">
                    <div class="footer-logo-mark">MP</div>
                    <span class="footer-logo-text">Cutting Tools</span>
                </div>
                <div class="footer-links">
                    <a href="#products">Produits</a>
                    <a href="#brands">Fournisseurs</a>
                    <a href="#quote">Soumission</a>
                </div>
                <div class="footer-text">© 2025 MP Cutting Tools — Au service de Montréal depuis 1991</div>
            </div>
        </div>
    </footer>

    <script>
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });
    </script>
</Layout>
