---
import Layout from '../layouts/Layout.astro';

const phone = "(514) 366-7000";
const email = "alex@mpcuttingtools.ca";
const phoneHref = "tel:+15143667000";

const specialties = [
    {
        title: "Cutting Tools & Abrasives",
        description: "Carbide inserts, end mills, drills, grinding wheels—production and maintenance grades",
        image: "https://images.unsplash.com/photo-1504917595217-d4dc5ebe6122?w=600&q=85"
    },
    {
        title: "Fasteners to Match Spec",
        description: "Metric, imperial, specialty grades—matching your existing specs exactly",
        image: "https://images.unsplash.com/photo-1558618666-fcd25c85cd64?w=600&q=85"
    },
    {
        title: "Safety & PPE for Shops",
        description: "Gloves, eyewear, hearing protection, respirators—CSA approved",
        image: "https://images.unsplash.com/photo-1581092160562-40aa08e78837?w=600&q=85"
    },
    {
        title: "MRO & Vendor Consolidation",
        description: "One call for everything—reduce your vendor count and paperwork",
        image: "https://images.unsplash.com/photo-1565193566173-7a0ee3dbe261?w=600&q=85"
    },
    {
        title: "Hard-to-Find & Discontinued",
        description: "Legacy parts, obsolete tools—we'll track it down",
        image: "https://images.unsplash.com/photo-1597484661643-2f5fef640dd1?w=600&q=85"
    },
    {
        title: "Hand & Power Tools",
        description: "Milwaukee, DeWalt, Stanley—pro-grade tools at distributor pricing",
        image: "https://images.unsplash.com/photo-1572981779307-38b8cabb2407?w=600&q=85"
    }
];

const brands = [
    "Kennametal", "Sandvik", "Iscar", "Walter", "Seco", "OSG",
    "3M", "Honeywell", "MSA", "Norton", "Stanley", "DeWalt",
    "Milwaukee", "Makita", "Widia", "Dormer", "Mitutoyo"
];

const industries = ["Machine Shops", "Fabrication", "Maintenance Teams", "Manufacturing", "Construction", "Aerospace"];
---

<Layout 
    title="MP Cutting Tools | Industrial Supplies & Tooling - Montreal"
    description="Industrial tooling, safety equipment, and MRO supplies. 34 years of sourcing from 50+ suppliers. Get quotes in 24 hours. Serving Greater Montreal."
    lang="en"
    alternateUrl="/fr"
    alternateLang="fr"
>
    <!-- Navigation -->
    <nav>
        <div class="nav-top-bar">
            <div class="nav-top-inner">
                <div class="nav-top-text">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                        <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
                    </svg>
                    Direct to owner — fast answers, no handoffs
                </div>
                <div class="nav-top-contact">
                    <a href={phoneHref}>
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
                        </svg>
                        {phone}
                    </a>
                    <a href={`mailto:${email}`}>
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                            <polyline points="22,6 12,13 2,6"/>
                        </svg>
                        {email}
                    </a>
                </div>
            </div>
        </div>
        <div class="nav-main">
            <div class="nav-inner">
                <a href="/" class="logo">
                    <div class="logo-mark">MP</div>
                    <span class="logo-text">Cutting Tools</span>
                </a>
                <div class="nav-links">
                    <a href="#products">Products</a>
                    <a href="#brands">Suppliers</a>
                    <a href="#quote" class="nav-cta">Get Quote</a>
                    <div class="lang-toggle">
                        <a href="/" class="active">EN</a>
                        <a href="/fr">FR</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero -->
    <section class="hero">
        <div class="container">
            <div class="hero-content">
                <div class="hero-badge">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                        <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
                    </svg>
                    Direct to Owner
                </div>
                <h1>Better Prices.<br><span>Because We Know Where to Look.</span></h1>
                <p>Industrial tooling, safety equipment, and MRO supplies. 34 years of sourcing from 50+ suppliers means you get the right part at the right price—fast.</p>
                <div class="hero-cta">
                    <a href="#quote" class="btn btn-primary">
                        Request Quote
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                            <path d="M5 12h14M12 5l7 7-7 7"/>
                        </svg>
                    </a>
                    <a href={phoneHref} class="btn btn-outline">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
                        </svg>
                        Call Now
                    </a>
                </div>
            </div>
            <div class="hero-image">
                <img src="https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?w=800&q=85" alt="Precision CNC machining" class="hero-image-main">
                <div class="hero-image-badge">
                    <span>34</span>
                    Years Experience
                </div>
            </div>
        </div>
    </section>

    <!-- How It Works -->
    <section class="how-it-works">
        <div class="container">
            <div class="step">
                <div class="step-number">1</div>
                <div class="step-content">
                    <h3>Send Your List</h3>
                    <p>Part numbers, photos, PDFs—whatever you've got</p>
                </div>
            </div>
            <div class="step">
                <div class="step-number">2</div>
                <div class="step-content">
                    <h3>We Confirm Details</h3>
                    <p>Availability, alternates, lead times—all verified</p>
                </div>
            </div>
            <div class="step">
                <div class="step-number">3</div>
                <div class="step-content">
                    <h3>Quote in 24h</h3>
                    <p>Delivery or pickup in Greater Montreal</p>
                </div>
            </div>
        </div>
    </section>

    <!-- What We're Best At -->
    <section class="specialties" id="products">
        <div class="container">
            <div class="section-header">
                <span class="section-label">What We're Best At</span>
                <h2 class="section-title">Specialized Sourcing</h2>
            </div>
            <div class="specialties-grid">
                {specialties.map((specialty) => (
                    <div class="specialty-card">
                        <img src={specialty.image} alt={specialty.title} class="specialty-image">
                        <div class="specialty-content">
                            <h3>{specialty.title}</h3>
                            <p>{specialty.description}</p>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Industries Strip -->
    <section class="industries">
        <div class="container">
            <div class="industries-inner">
                <span class="industries-label">Industries Served:</span>
                <div class="industries-list">
                    {industries.map((industry) => (
                        <span>{industry}</span>
                    ))}
                </div>
            </div>
        </div>
    </section>

    <!-- Image Showcase -->
    <section class="showcase">
        <div class="container">
            <div class="showcase-grid">
                <div class="showcase-images">
                    <img src="https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?w=1200&q=85" alt="CNC machining center" class="showcase-img">
                    <img src="https://images.unsplash.com/photo-1565193566173-7a0ee3dbe261?w=600&q=85" alt="Precision tooling" class="showcase-img">
                    <img src="https://images.unsplash.com/photo-1504917595217-d4dc5ebe6122?w=600&q=85" alt="Industrial manufacturing" class="showcase-img">
                </div>
                <div class="showcase-content">
                    <h2>Precision Matters.<br>So Does Price.</h2>
                    <p>Since 1991, we've been the sourcing partner Montreal shops trust when they need the right tool—not just any tool. One point of contact from quote to delivery. No handoffs, no runaround.</p>
                    <div class="showcase-stats">
                        <div class="stat">
                            <div class="stat-number">50+</div>
                            <div class="stat-label">Supplier Partners</div>
                        </div>
                        <div class="stat">
                            <div class="stat-number">24h</div>
                            <div class="stat-label">Quote Turnaround</div>
                        </div>
                        <div class="stat">
                            <div class="stat-number">34</div>
                            <div class="stat-label">Years in Business</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Brands -->
    <section class="brands" id="brands">
        <div class="container">
            <div class="brands-header">
                <span class="section-label">Supplier Network</span>
                <h2 class="section-title">50+ Brands We Source</h2>
                <p>Authorized access to the industry's leading manufacturers</p>
            </div>
            <div class="brands-grid">
                {brands.map((brand) => (
                    <div class="brand-card"><span>{brand}</span></div>
                ))}
                <div class="brand-card more"><span>+ Many More</span></div>
            </div>
            <p class="brands-note">Don't see your brand? We can likely source it. Just ask.</p>
        </div>
    </section>

    <!-- Quote Section -->
    <section class="quote-section" id="quote">
        <div class="container">
            <div class="quote-grid">
                <div class="quote-content">
                    <div class="quote-badge">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                            <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
                        </svg>
                        Direct to Owner
                    </div>
                    <h2>Get Your Quote Today</h2>
                    <p>Send us your parts list, BOM, or even a photo of a label. We'll confirm availability, suggest alternates if needed, and get you pricing within 24 hours.</p>
                    <div class="quote-contact">
                        <a href={phoneHref}>
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
                            </svg>
                            {phone}
                        </a>
                        <a href={`mailto:${email}`}>
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                                <polyline points="22,6 12,13 2,6"/>
                            </svg>
                            {email}
                        </a>
                    </div>
                </div>
                <div class="quote-form-wrapper">
                    <form class="quote-form" name="quote" method="POST" data-netlify="true" enctype="multipart/form-data">
                        <input type="hidden" name="form-name" value="quote" />
                        <h3>Parts List Quote</h3>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="name">Your Name</label>
                                <input type="text" id="name" name="name" placeholder="John Smith" required>
                            </div>
                            <div class="form-group">
                                <label for="company">Company</label>
                                <input type="text" id="company" name="company" placeholder="ABC Manufacturing">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" id="email" name="email" placeholder="john@company.com" required>
                            </div>
                            <div class="form-group">
                                <label for="phone">Phone</label>
                                <input type="tel" id="phone" name="phone" placeholder="(514) 555-0000">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group full">
                                <label for="parts">Parts List</label>
                                <textarea id="parts" name="parts" placeholder="Part Number, Qty, Brand (one per line)&#10;Example:&#10;CNMG120408, 50, Sandvik&#10;1/2 End Mill 4FL, 10, Any"></textarea>
                                <small>Paste part numbers, quantities, brands—or describe what you need</small>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="needby">Need-by Date</label>
                                <input type="date" id="needby" name="needby">
                            </div>
                            <div class="form-group">
                                <label for="postal">Delivery Postal Code</label>
                                <input type="text" id="postal" name="postal" placeholder="H3B 1A7">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group full">
                                <label for="files">Upload Files (Optional)</label>
                                <input type="file" id="files" name="files" accept=".pdf,.png,.jpg,.jpeg,.xlsx,.csv" multiple>
                                <small>PDF, image, BOM spreadsheet, or photo of label</small>
                            </div>
                        </div>
                        <div class="form-checkbox">
                            <input type="checkbox" id="alternates" name="alternates">
                            <label for="alternates">OK to suggest alternates if original unavailable</label>
                        </div>
                        <div class="form-submit">
                            <button type="submit" class="btn btn-primary">
                                Submit Quote Request
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                                    <path d="M5 12h14M12 5l7 7-7 7"/>
                                </svg>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-logo">
                    <div class="footer-logo-mark">MP</div>
                    <span class="footer-logo-text">Cutting Tools</span>
                </div>
                <div class="footer-links">
                    <a href="#products">Products</a>
                    <a href="#brands">Suppliers</a>
                    <a href="#quote">Get Quote</a>
                </div>
                <div class="footer-text">© 2025 MP Cutting Tools — Serving Montreal since 1991</div>
            </div>
        </div>
    </footer>

    <script>
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });
    </script>
</Layout>
